<!--                    android:layout_gravity="center"-->
<!--                    android:gravity="center"-->

<!--                    ></Imageview></LinearLayout>-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
</ScrollView>