<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".details">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageH"
        android:src="@drawable/back1"
        android:scaleType="fitXY"
        />
</androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"


            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:padding="5dp"
            android:text="Name:"
            android:layout_weight="1"
            android:textColor="#000"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/NameH"
            android:textSize="21sp"
            android:layout_weight="11"
            android:padding="5dp"
            android:text="Yash Agarwal"
            android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"

                android:textSize="21sp"
                android:padding="5dp"
                android:textColor="#000"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:id="@+id/add"
                android:padding="5dp"
                android:textSize="21sp"
                android:textColor="#000"
                android:text="32/2 mohannagar road, Shankar shah society,Dhankwadi"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance From Pict: "
                android:textSize="21sp"
                android:padding="5dp"
                android:textColor="#000"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/dist"
                android:textSize="21sp"
                android:textColor="#000"
                android:text="600m"
                android:padding="5dp"
                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent(monthly) Per person: "
                android:textSize="21sp"
                android:padding="5dp"
                android:layout_weight="3"
                android:textColor="#000"
                ></TextView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:id="@+id/rp"
                android:textSize="21sp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="Yash Agarwal"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent Total: "
                android:textSize="21sp"
                android:padding="5dp"
                android:textColor="#000"
                ></TextView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/rt"
                android:textSize="21sp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="Yash Agarwal"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostel For: "
                android:textSize="21sp"
                android:padding="5dp"
                android:textColor="#000"
                ></TextView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/hf"
                android:textSize="21sp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="Yash Agarwal"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bedrooms: "
                android:textSize="21sp"
                android:padding="5dp"
                android:textColor="#000"
                ></TextView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/bed"
                android:textSize="21sp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="Yash Agarwal"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bathrooms: "
                android:textSize="21sp"
                android:padding="5dp"
                android:textColor="#000"
                ></TextView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/nb"
                android:textSize="21sp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="Yash Agarwal"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of people: "
                android:textSize="21sp"
                android:padding="5dp"
                android:textColor="#000"
                ></TextView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/np"
                android:textSize="21sp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="1 tp 6 people"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: "
                android:textSize="21sp"
                android:padding="5dp"
                android:textColor="#000"
                ></TextView>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/type"
                android:textSize="21sp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="Paying Guest"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:gravity="center"
           >
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/phone"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/selector_xml_btn_yellow"
                android:text="Phone:"></Button></LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/LOCATION"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/selector_xml_btn_yellow"
                    android:text="Find this address:"></Button></LinearLayout>



